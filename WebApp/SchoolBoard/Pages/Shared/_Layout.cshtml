@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolBoard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3 mt-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @if (Convert.ToBoolean(Configuration["Board:ShowOSInfo"]))
        {
            <div class="container">
                Infoboard @Configuration["Board:Name"] - @System.Runtime.InteropServices.RuntimeInformation.OSDescription - Zuletzt aktulisiert um @Helpers.TimeHelper.GetLocalTime(Configuration["Board:Timezone"])
            </div>
        }
        else
        {
            <div class="container">
                Infoboard @Configuration["Board:Name"] - Zuletzt aktulisiert um @Helpers.TimeHelper.GetLocalTime(Configuration["Board:Timezone"])
            </div>
        }
    </footer>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@

    @RenderSection("Scripts", required: false)
</body>
</html>
