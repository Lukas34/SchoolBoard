@page
@model IndexModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Vertretungsplan - " + Model.dayOfWeek;
}

<meta http-equiv="refresh" content="300">

<div class="text-center">
    @if (Model.dateOfYear != null)
    {
        <h1 class="display-4"><strong>@Model.dayOfWeek</strong>, @Model.dayOfMonth</h1>
        <p>@Configuration["Board:Heading"] für den @Model.dateOfYear</p>
    }
    else
    {
        <h1 class="text-danger">Bildschirm Inaktiv</h1>
        <p class="text-danger">Dieses Infoboard wurde vom Systemverwalter deaktiviert.</p>
    }
</div>

@if (Model.dateOfYear != null)
{
    @if (false) // Loading circle
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    }

    @if (Convert.ToBoolean(Configuration["Board:Alerts"])) // Alerts
    {
        <div class="alert alert-primary" role="alert">
            Die Stufensprecher für die Jahrgangsstufe EF stehen fest! Ihr könnt heute ab jetzt Liste am Stufenboard ansehen.
        </div>

        <div class="alert alert-danger" role="alert">
            Aufgrund von Wetterbedingungen potenziell apokalyptischen Ausmaßes <strong>fällt die Exkursion nach Aperture Science der Q1 aus</strong>. Wir bitten um Verständnis.
        </div>
    }

    @if (Convert.ToBoolean(Configuration["Board:Exams"])) // Klausuren
    {
        <h2>Klausuren</h2>
        <hr />

        <div class="vtp-table">
            <table class="table table-sm table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">Datum</th>
                        <th scope="col" colspan="5">@Model.dayOfWeek, @Model.dateOfYear</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">Block</td>
                        <td colspan="5">JSt EF      GK-Block 01</td>
                    </tr>
                    <tr>
                        <td scope="row">Kurs</td>
                        <td>K1G1</td>
                        <td>K2G2</td>
                        <td>K3G3</td>
                        <td>K4G4</td>
                        <td>K5G5</td>
                    </tr>
                    <tr>
                        <td scope="row">Fachlehrer</td>
                        <td>FL1</td>
                        <td>FL2</td>
                        <td>FL3</td>
                        <td>FL4</td>
                        <td>FL5</td>
                    </tr>
                    <tr>
                        <td scope="row">Zahl</td>
                        <td>10</td>
                        <td>14</td>
                        <td>12</td>
                        <td>10</td>
                        <td>9</td>
                    </tr>
                    <tr>
                        <td scope="row">Raum</td>
                        <td>A1.11</td>
                        <td>A2.22</td>
                        <td colspan="2">A2.13</td>
                        <td>C0.17</td>
                    </tr>
                </tbody>
            </table>
        </div>
    }

    @if (Convert.ToBoolean(Configuration["Board:Representations"])) // Vertretungsplan
    {
        <h2>Vertretungsplan</h2>
        <hr />

        <div class="vtp-table">
            <h4>Lehrer 1</h4>

            <table class="table table-sm table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">Stunde</th>
                        <th scope="col">Kurs</th>
                        <th scope="col">Vertretender Lehrer</th>
                        <th scope="col">Raum</th>
                        <th scope="col">Bemerkung</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1 <span class="badge badge-primary">Neu</span></th>
                        <td>KURS1</td>
                        <td>/</td>
                        <td>A0.00</td>
                        <td>EVA</td>
                    </tr>
                    <tr>
                        <th scope="row">1</th>
                        <td>KURS2</td>
                        <td>/</td>
                        <td>A1.11</td>
                        <td>EVA</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>KURS3</td>
                        <td>/</td>
                        <td>A2.22</td>
                        <td>EVA</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="vtp-table">
            <h4>Lehrer 2</h4>

            <table class="table table-sm table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">Stunde</th>
                        <th scope="col">Kurs</th>
                        <th scope="col">Vertretender Lehrer</th>
                        <th scope="col">Raum</th>
                        <th scope="col">Bemerkung</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>KURS1</td>
                        <td>/</td>
                        <td>A0.00</td>
                        <td>EVA</td>
                    </tr>
                    <tr>
                        <th scope="row">1</th>
                        <td>KURS2</td>
                        <td>/</td>
                        <td>A1.11</td>
                        <td>EVA</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>KURS3</td>
                        <td>/</td>
                        <td>A2.22</td>
                        <td>EVA</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="vtp-table">
            <h4>Lehrer 3 <span class="badge badge-primary">Neu</span></h4>

            <table class="table table-sm table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">Stunde</th>
                        <th scope="col">Kurs</th>
                        <th scope="col">Vertretender Lehrer</th>
                        <th scope="col">Raum</th>
                        <th scope="col">Bemerkung</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>KURS1</td>
                        <td>/</td>
                        <td>A0.00</td>
                        <td>EVA</td>
                    </tr>
                    <tr>
                        <th scope="row">1</th>
                        <td>KURS2</td>
                        <td>/</td>
                        <td>A1.11</td>
                        <td>EVA</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>KURS3</td>
                        <td>/</td>
                        <td>A2.22</td>
                        <td>EVA</td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
}
